<div class="container">
    <h1>Edit Product</h1>
    <hr>
    <div class="row">
        <!-- left column -->
        <div class="col-md-3">
            <!-- Choose Upload Files-->
            <div class="text-center">
                <div class="frame-img" style="width: 200px; height: 200px">
                    <img src="../../uploads/product/<%= (typeof product.img != "undefined") ? product.img : 'img-none.png' %>"
                         class="img-center"
                         alt=""
                         id="img-change"
                    >
                </div>
                <span class="file-upload-info col-md-12"></span>
                <br>
                <br>
                <label for="file-upload" class="custom-file-upload btn-info btn">Choose</label>
            </div>
        </div>

        <!-- edit form column -->
        <div class="col-md-9 personal-info">
            <h3>Product info</h3>
            <form action="/product/edit/<%= id %>"
                  method="post"
                  class="form-horizontal"
                  id="myForm"
                  role="form"
                  enctype="multipart/form-data"
            >
                <div class="form-group">
                    <label class="col-lg-3 control-label">Name:</label>
                    <div class="col-lg-8">
                        <input class="form-control"
                               type="text"
                               value="<%= (typeof product.name != "undefined") ? product.name : '' %>"
                               name="name">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Amount:</label>
                    <div class="col-lg-8">
                        <input class="form-control"
                               type="number"
                               min="0"
                               value="<%= (typeof product.amount != "undefined") ? product.amount : 0 %>"
                               name="amount">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Price:</label>
                    <div class="col-lg-8">
                        <input class="form-control"
                               type="number"
                               min="0"
                               value="<%= (typeof product.price != "undefined") ? product.price : 0 %>"
                               name="price">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Content:</label>
                    <div class="col-lg-8">
                        <input class="form-control"
                               type="text"
                               value="<%= (typeof product.content != "undefined") ? product.content : '' %>"
                               name="content">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Description:</label>
                    <div class="col-lg-8">
                        <textarea class="form-control"
                                  name="description"
                                  rows="3"
                                  style="width: 100%"
                        ><%= (typeof product.description != "undefined") ? product.description : '' %></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-8">
                        <input id="file-upload"
                               class="choose-file"
                               type="file"
                               name="img" hidden>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <input type="submit" class="btn btn-primary" value="Save Changes">
                        <span></span>
                        <input type="reset" id="btnReset" class="btn btn-default" value="Reset">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<hr>
<script src="/js/admin/product/edit.js"></script>