<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="card-tools">
                    <form action="/category/list" method="GET">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="keyword" class="form-control float-right" placeholder="Search"
                                   value="<%= typeof keyword !== 'undefined' ? keyword : null %>">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0" style="height: 600px;">
                <table class="table table-head-fixed text-nowrap table-bordered table-striped">
                    <thead>
                    <tr>
                        <th width="10%">ID</th>
                        <th width="12%">Name</th>
                        <th width="10%">delFlg</th>
                        <th width="10%">Price</th>
                        <th width="15%">createdAt</th>
                        <th width="15%">updatedAt</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% categories.forEach(function (category) { %>
                        <tr id="row_<%= category.id %>">
                            <td><%= category.id %></td>
                            <td><%= category.name %></td>
                            <td><%= category.delFlg %></td>
                            <td><%= category.createdAt %></td>
                            <td><%= category.updatedAt %></td>
                            <td>
                                <button type="button"
                                        class="btn btn-block btn-outline-info btn-lg btn-category-del"
                                        name="btn-delete"
                                        style="margin-bottom: 5px;">Delete
                                </button>
                                <a href="/category/edit/<%= category.id %>">
                                    <button type="button" class="btn btn-block btn-outline-warning btn-lg">Edit</button>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
<input type="hidden" value="<%if (typeof messages.categoryArticles !== undefined) {%><%= messages.categoryArticles %><%}%>" id="infoMessage">
<script type="module" src="/js/admin/category/list.js"></script>