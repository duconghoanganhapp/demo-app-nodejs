<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="">Home</a></li>
                <li class="breadcrumb-item"><a href="/articles">Articles</a></li>
                <li class="breadcrumb-item active">Add Articles</li>
            </ol>
        </div>
        </div>
    </div>
</section>

<%- include('../../partials/messages.ejs') %>
<section class="content">
    <div class="container-fluid">
        <div class="card card-default">
        <div class="card-header">
            <h3 class="card-title">Add Articles</h3>
        </div>
        <form method="POST" action="/articles/add" enctype="multipart/form-data">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Title<span class="text-danger">*</span></label>
                            <input type="text" name="title" id="title" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Alias</label>
                            <input type="text" name="alias" id="alias" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Author<span class="text-danger">*</span></label>
                            <select name="userId" class="form-control select2" style="width: 100%;">
                                <option value="">Please choosen</option>
                                <% for(let user of listUser) { %>
                                    <option value="<%= user.id %>">
                                        <%= user.firstName + ' ' + user.lastName %>
                                    </option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Published<span class="text-danger">*</span></label>
                            <input type="text" name="published" class="form-control date-range-picker">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Category Articles<span class="text-danger">*</span></label>
                            <select name="cateArticlesId" class="form-control select2" style="width: 100%;">
                                <option value="">Please choosen</option>
                                <% for(let artCate of listArtCate) { %>
                                    <option value="<%= artCate.id %>">
                                        <%= artCate.name %>
                                    </option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Image</label>
                            <div class="custom-file">
                                <input type="file" name="fileUrl" class="custom-file-input" id="file-img">
                                <label class="custom-file-label" for="file-img">Choose file</label>
                            </div>
                        </div>
                        <span class="show-file-name d-none">
                        </span>
                        <div class="show-file d-none">
                            <img src="" id="file-src"></img>
                            <i class="fas fa-minus-circle text-danger focus-file d-none" 
                            id="rm-file" title="Delete file"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
        </div>
    </div>
</section>

<link rel="stylesheet" href="/css/admin/articles/index.css" />
<script type="module" src="/js/admin/articles/index.js"></script>
<script src="/js/admin/articles/add.js"></script>