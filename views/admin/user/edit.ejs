<div class="register-logo">
    <a href="../../index2.html"><b>E</b>DIT</a>
  </div>
<div class="card">
    <div class="card-body register-card-body">
      <form action="/user/edit/<%= user.id %>" method="post">
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="First name" name="firstName" value="<%= user.firstName %>">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>
       <div> <%= messages.firstName %></div>
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Last name" name="lastName" value="<%= user.lastName %>">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div> <%= messages.lastName %></div>
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Email" name="email" value="<%= user.email %>">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div> <%= messages.email %></div>
        <div class="input-group mb-3">
          <input type="password" class="form-control" placeholder="password" name="password">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div> <%= messages.password %></div>
        <div class="input-group mb-3">
          <input type="password" class="form-control" placeholder="Confirm password" name="confirmPassword">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div> <%= messages.confirmPassword %></div>
        <!-- <div class="mb-3">
            <input type="file" class="form-control" name="images">
          </div>
          <div> <%= messages.images %></div> -->
        <div class="row">
          <!-- /.col -->
          <div class="col-12">
            <button type="submit" class="btn btn-primary btn-block">Edit</button>
          </div>
          <!-- /.col -->
        </div>
      </form>
      <br>
      <div class="row">
          <div class="col-5">
            <a href="/user"><button type="button" class="btn btn-block btn-success">Back</button></a>
          </div>
      </div>
    </div>
    <!-- /.form-box -->
  </div>