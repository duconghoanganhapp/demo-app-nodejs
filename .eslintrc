{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "rules": {
        "eqeqeq": 1,
        "quotes": [2, "single"],
        "curly": 2,
        "camelcase": [
            2,
            {
                "properties": "always"
            }
        ],
        "semi": [
            2,
            "always"
        ],
        "no-cond-assign": 1,
        "no-constant-condition": 1,
        "no-trailing-spaces": 2,
        "no-multi-spaces": 2,
        "linebreak-style:": 0
       
    }
}