{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "dist",
        "baseUrl": "src",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "config",
        "migrations",
        "models",
        "node_modules"
    ]
}